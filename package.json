{
  "private": true,
  "author": "Grafana Labs",
  "license": "AGPL-3.0-only",
  "name": "@grafana/root",
  "version": "0.0.8",
  "description": "Grafana framework for building dynamic dashboards",
  "keywords": [
    "typescript"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "http://github.com/grafana/scenes.git"
  },
  "scripts": {
    "clean": "lerna exec yarn clean",
    "dev": "yarn workspace @grafana/scenes build:dev --watch",
    "demo": "yarn workspace @grafana/scenes-demo dev",
    "build:dev": "lerna exec yarn build:prod",
    "build:prod": "lerna exec yarn typecheck && lerna yarn bundle",
    "bundle": "lerna exec tsc -p ./tsconfig.build.json && rollup -c rollup.config.ts",
    "precommit": "yarn run lint-staged",
    "prepare": "husky install",
    "typecheck": "tsc --emitDeclarationOnly false --noEmit",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.tsx,.ts --cache"
  },
  "devDependencies": {
    "@grafana/eslint-config": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.3",
    "lerna": "^6.4.1",
    "lint-staged": "^13.1.0",
    "prettier": "2.5.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsc-watch": "^4.5.0",
    "tslib": "2.4.1",
    "typescript": "4.9.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --ext .js,.tsx,.ts --cache --fix",
      "prettier --write"
    ],
    "*.{json,scss,md,mdx}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.10.0",
    "yarn": ">=3.3.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@types/react": "17.0.42"
  },
  "packageManager": "yarn@3.3.1"
}
