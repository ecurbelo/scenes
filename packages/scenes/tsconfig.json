{
  "extends": "@grafana/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "declarationDir": "./compiled",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDirs": ["."]
  },
  "exclude": ["dist/**/*"],
  "include": ["src/**/*.ts*"],
  "ts-node": {
    "compilerOptions": {
      "isolatedModules": false,
      "module": "commonjs"
    }
  }
}
